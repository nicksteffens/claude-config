{
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "your-token-here",
    "ANTHROPIC_BASE_URL": "https://your-custom-proxy-url/"
  },
  "permissions": {
    "allow": [
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push origin*)",
      "Bash(git pull*)",
      "Bash(git fetch*)",
      "Bash(git stash*)",
      "Bash(git show*)",
      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(npx *)",
      "Bash(volta *)",
      "Bash(gh issue *)",
      "Bash(gh pr create*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh pr checkout*)",
      "Bash(gh pr diff*)",
      "Bash(gh pr review*)",
      "Bash(gh pr comment*)",
      "Bash(gh gist *)",
      "Bash(gh repo *)",
      "Bash(gh api *)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(cd *)",
      "Bash(pwd)",
      "Bash(cat *)",
      "Bash(echo *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(diff *)",
      "Bash(jest *)",
      "Bash(vitest *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(tsc *)",
      "Bash(tsx *)",
      "Bash(rg *)",
      "Read(*)",
      "Grep(*)",
      "Glob(*)",
      "LS(*)",
      "WebFetch(https://docs.anthropic.com/*)",
      "WebFetch(https://www.npmjs.com/*)",
      "WebFetch(https://github.com/*)",
      "WebFetch(https://developer.mozilla.org/*)"
    ],
    "deny": [
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(chmod 777*)",
      "Bash(git push * main)",
      "Bash(git push * master)"
    ],
    "additionalDirectories": [
      "/path/to/your/project1",
      "/path/to/your/project2"
    ],
    "ask": [
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(chmod *)",
      "Bash(trash *)",
      "Bash(git push *--force*)",
      "Bash(git reset --hard*)",
      "Bash(git rebase *)",
      "Bash(git merge *)",
      "Bash(gh pr merge*)",
      "Bash(gh pr close*)",
      "Bash(gh issue close*)",
      "Bash(npm publish*)",
      "Bash(yarn publish*)",
      "Bash(curl *)",
      "Bash(wget *)"
    ]
  }
}