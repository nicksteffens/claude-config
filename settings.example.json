{
  "env": {
    "ANTHROPIC_BASE_URL": "https://your-custom-proxy-url/"
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(npx:*)",
      "Bash(volta:*)",
      "Bash(gh:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(pwd)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(jest:*)",
      "Bash(vitest:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(tsc:*)",
      "Bash(tsx:*)",
      "Bash(rg:*)",
      "Read(*)",
      "Grep(*)",
      "Glob(*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "mcp__your-mcp-server__*",
      "Skill(daily-log)",
      "Skill(your-custom-skill)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777:*)",
      "Bash(git push origin main)",
      "Bash(git push origin master)",
      "Bash(git push -f)",
      "Bash(git push --force)",
      "Bash(git push --force-with-lease:*)"
    ],
    "ask": [
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(trash:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(npm publish)",
      "Bash(yarn publish)",
      "Bash(npm install -g:*)",
      "Bash(yarn global add:*)",
      "Edit(*)",
      "Write(*)",
      "NotebookEdit(*)",
      "WebFetch",
      "WebSearch",
      "Bash(git commit --amend:*)",
      "Bash(git commit -a --amend:*)"
    ],
    "additionalDirectories": [
      "/path/to/your/project1",
      "/path/to/your/project2"
    ]
  },
  "model": "opus[1m]",
  "alwaysThinkingEnabled": true
}
