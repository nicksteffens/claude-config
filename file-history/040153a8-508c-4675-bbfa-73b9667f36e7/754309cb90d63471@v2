name: Auto Label PR

on:
  pull_request:
    types: [opened, synchronize]

jobs:
  label:
    name: Apply label from conventional commit
    runs-on: ubuntu-latest
    steps:
      - uses: actions/github-script@v7
        with:
          script: |
            const { data: commits } = await github.rest.pulls.listCommits({
              owner: context.repo.owner,
              repo: context.repo.repo,
              pull_number: context.issue.number
            });

            const mapping = {
              'feat': 'feature',
              'fix': 'bug',
              'chore': 'chore',
              'refactor': 'chore',
              'docs': 'chore',
              'test': 'chore',
              'perf': 'feature',
              'security': 'security',
              'ci': 'chore',
              'build': 'chore',
              'style': 'chore'
            };

            const labelsToAdd = new Set();

            for (const commit of commits) {
              const message = commit.commit.message;
              const match = message.match(/^(\w+)(\(.+\))?:/);
              if (match && mapping[match[1]]) {
                labelsToAdd.add(mapping[match[1]]);
              }
            }

            if (labelsToAdd.size > 0) {
              await github.rest.issues.addLabels({
                owner: context.repo.owner,
                repo: context.repo.repo,
                issue_number: context.issue.number,
                labels: Array.from(labelsToAdd)
              });
              console.log(`Added labels: ${Array.from(labelsToAdd).join(', ')}`);
            } else {
              console.log('No matching conventional commit prefixes found');
            }
